.form
  .new-header
    .new-header__title
      = link_to image_tag(src="logo.png", size: "140x40"), root_path
  .main
    .login-box
      .no-login
        アカウントをお持ちでない方はこちら
        -# = render "devise/shared/links", class:"btn"
        = link_to "新規登録画面", user_registration_path, class:"log-btn"
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .box
          .field
            -# .field__label
            -#   = f.label :メールアドレス
            .field__box
              = f.email_field :email, {autofocus: true, placeholder:"メールアドレス",class:'input'}
          .field
            -# .field__label
            -#   = f.label :パスワード
            .field__box
              = f.password_field :password, {autocomplete: "off", placeholder:"パスワード",class:'input'}
          .field
            .actions
              = f.submit "ログイン", class: 'btn'
