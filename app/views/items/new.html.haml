.page
  .logo
    = link_to image_tag(src='logo.png', size: "200x55"), root_path

  .main
    = form_with url: "/items", method: "GET", class: "form", local: true do |f|
      .top
        .top__image
          .top__image__title
            .top__image__title__left
              出品画像
            .top__image__title__right
              必須
          .top__image__text
            最大5枚までアップロードできます
          .top__image__upload
            = f.fields_for :images do |i|
              = i.file_field :image, type: 'file', id:"img-file", style: "display:none", class: "field__file"
              %label{for: "img-file", class: 'label'}
                %i.fas.fa-camera.icon
                  .text
                    ファイルをアップロード
        .top__name
          .top__name__title
            .top__name__title__left
              商品名
            .top__name__title__right
              必須
          .top__name__form
            = f.text_field :text, class: 'top__name__form__field', placeholder: '40文字まで'
        .top__description
          .top__description__title
            .top__description__title__left
              商品の説明
            .top__description__title__right
              必須
          .top__description__form
            = f.text_area :text, class: 'top__description__form__field field-area', placeholder: '説明を入れてください&#13;&#10;&#13;&#10;例)　祖母からもらったペンダントです'.html_safe 

      .detail
        .detail__category
          .detail__category__title
            .detail__category__title__left
              カテゴリー
            .detail__category__title__right
              必須
          .detail__category__form
            = f.select :select_category, [["選択してください", 0]], {}, {class: 'detail__category__form__field'}
        .detail__brand
          .detail__brand__title
            .detail__brand__title__left
              ブランド
            .detail__brand__title__right.optional
              任意
          .detail__brand__form
            = f.text_field :text, class: 'detail__brand__form__field', placeholder: '例)　メルエム'
        .detail__condition
          .detail__condition__title
            .detail__condition__title__left
              商品の状態
            .detail__condition__title__right
              必須
          .detail__condition__form
            = f.select :select_condition, [["選択してください", 0]], {}, {class: 'detail__condition__form__field'}

      .shipping
        .shipping__pay
          .shipping__pay__title
            .shipping__pay__title__left
              配送料の負担
            .shipping__pay__title__right
              必須
          .shipping__pay__form
            = f.select :select_pay, [["選択してください", 0]], {}, {class: 'shipping__pay__form__field'}
        .shipping__prefecture
          .shipping__prefecture__title
            .shipping__prefecture__title__left
              発送元の地域
            .shipping__prefecture__title__right
              必須
          .shipping__prefecture__form
            = f.select :select_prefecture, [["選択してください", 0]], {}, {class: 'shipping__prefecture__form__field'}
        .shipping__day
          .shipping__day__title
            .shipping__day__title__left
              発送までの日数
            .shipping__day__title__right
              必須
          .shipping__day__form
            = f.select :select_day, [["選択してください", 0]], {}, {class: 'shipping__day__form__field'}

      .price
        .price__title
          .price__title__left
            販売価格
          .price__title__right
            必須
        .price__form
          = f.number_field :number, class: 'price__form__field', placeholder: '0~9,999,999を入力してください'

      .button
        = f.submit '出品する', class: 'button__put-up'

  .logo.last
    .last__area
      = link_to image_tag(src='logo-white.png', size: "200x55"), root_path
